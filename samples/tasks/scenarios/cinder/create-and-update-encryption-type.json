{
    "version": 2,
    "title": "Cinder Volume Type Encryption Creation and Update",
    "description": "Test scenario for creating volume type encryption specifications and updating them in Cinder block storage service.",
    "subtasks": [
        {
            "title": "Create And Update Encryption Type",
            "scenario": {
                "CinderVolumeTypes.create_and_update_encryption_type": {
                    "create_provider": "LuksEncryptor",
                    "create_cipher": "aes-xts-plain64",
                    "create_key_size": 512,
                    "create_control_location": "front-end",
                    "update_provider": "CryptsetupEncryptor",
                    "update_cipher": "aes-xts-plain",
                    "update_key_size": 256,
                    "update_control_location": "back-end"
                }
            },
            "runner": {
                "constant": {
                    "times": 4,
                    "concurrency": 1
                }
            },
            "contexts": {
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 2
                },
                "volume_types": [
                    "test_type1",
                    "test_type2",
                    "test_type3",
                    "test_type4"
                ]
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
