{
    "version": 2,
    "title": "Cinder Volume Creation and Upload to Glance Image",
    "description": "Test scenario for creating volumes and uploading them as Glance images in Cinder block storage service.",
    "subtasks": [
        {
            "title": "Create And Upload Volume To Image (variant 1)",
            "scenario": {
                "CinderVolumes.create_and_upload_volume_to_image": {
                    "size": 1,
                    "force": false,
                    "container_format": "bare",
                    "disk_format": "raw",
                    "do_delete": true,
                    "image": {
                        "name": "^cirros.*-disk$"
                    }
                }
            },
            "runner": {
                "constant": {
                    "times": 3,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        },
        {
            "title": "Create And Upload Volume To Image (variant 2)",
            "scenario": {
                "CinderVolumes.create_and_upload_volume_to_image": {
                    "size": {
                        "min": 1,
                        "max": 5
                    },
                    "force": false,
                    "container_format": "bare",
                    "disk_format": "raw",
                    "do_delete": true,
                    "image": {
                        "name": "^cirros.*-disk$"
                    }
                }
            },
            "runner": {
                "constant": {
                    "times": 3,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
