{% set flavor_name = flavor_name or "m1.tiny" %}
{
    "version": 2,
    "title": "Cinder Nested Snapshot Creation and Volume Attachment",
    "description": "Test scenario for creating nested snapshots and attaching volumes in Cinder block storage service.",
    "subtasks": [
        {
            "title": "Create nested snapshots and attach volume",
            "scenario": {
                "CinderVolumes.create_nested_snapshots_and_attach_volume": {
                    "size": {
                        "min": 1,
                        "max": 5
                    },
                    "nested_level": 5,
                    "image": {
                        "name": "^cirros.*-disk$"
                    },
                    "flavor": {
                        "name": "{{flavor_name}}"
                    }
                }
            },
            "runner": {
                "constant": {
                    "times": 1,
                    "concurrency": 1
                }
            },
            "contexts": {
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 1
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
