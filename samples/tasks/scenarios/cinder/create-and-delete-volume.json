{
    "version": 2,
    "title": "Cinder Volume Creation and Deletion",
    "description": "Test scenario for creating and deleting volumes in Cinder block storage service.",
    "subtasks": [
        {
            "title": "Create and delete volume (fixed size)",
            "scenario": {
                "CinderVolumes.create_and_delete_volume": {
                    "size": 1
                }
            },
            "runner": {
                "constant": {
                    "times": 3,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        },
        {
            "title": "Create and delete volume (variable size)",
            "scenario": {
                "CinderVolumes.create_and_delete_volume": {
                    "size": {
                        "min": 1,
                        "max": 5
                    }
                }
            },
            "runner": {
                "constant": {
                    "times": 3,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
