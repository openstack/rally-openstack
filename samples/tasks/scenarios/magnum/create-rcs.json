{
    "version": 2,
    "title": "Magnum Create Rcs",
    "description": "Test creating Magnum container resources",
    "subtasks": [
        {
            "title": "Magnum Create Rcs (variant 1)",
            "scenario": {
                "K8sPods.create_rcs": {
                    "manifests": [
                        "artifacts/rc_nginx.yaml.k8s"
                    ]
                }
            },
            "runner": {
                "constant": {
                    "concurrency": 1,
                    "times": 1
                }
            },
            "contexts": {
                "users": {
                    "users_per_tenant": 1,
                    "tenants": 1
                },
                "cluster_templates": {
                    "docker_volume_size": 5,
                    "coe": "kubernetes",
                    "image_id": "fedora-atomic-latest",
                    "dns_nameserver": "8.8.8.8",
                    "external_network_id": "public",
                    "flavor_id": "m1.small",
                    "network_driver": "flannel"
                },
                "clusters": {
                    "node_count": 2
                },
                "ca_certs": {
                    "directory": "/home/stack"
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        },
        {
            "title": "Magnum Create Rcs (variant 2)",
            "scenario": {
                "K8sPods.create_rcs": {
