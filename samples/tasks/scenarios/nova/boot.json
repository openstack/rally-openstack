{% set flavor_name = flavor_name or "m1.tiny" %}
{
    "version": 2,
    "title": "Boot Nova servers",
    "description": "Test booting Nova servers without deletion",
    "subtasks": [
        {
            "title": "Boot server",
            "scenario": {
                "NovaServers.boot_server": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "^cirros.*-disk$"
                    }
                }
            },
            "runner": {
                "constant": {
                    "times": 10,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
