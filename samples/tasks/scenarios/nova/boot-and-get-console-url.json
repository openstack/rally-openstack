{% set flavor_name = flavor_name or "m1.tiny" %}
{
    "version": 2,
    "title": "Nova Boot And Get Console Url",
    "description": "Test booting Nova servers",
    "subtasks": [
        {
            "title": "Boot and get console url",
            "scenario": {
                "NovaServers.boot_and_get_console_url": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "^cirros.*-disk$"
                    },
                    "console_type": "novnc"
                }
            },
            "runner": {
                "constant": {
                    "times": 4,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
