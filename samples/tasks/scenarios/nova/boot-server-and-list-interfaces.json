{% set flavor_name = flavor_name or "m1.tiny" %}
{% set image_name = "^(cirros.*-disk|TestVM)$" %}
{
    "version": 2,
    "title": "Nova Boot Server And List Interfaces",
    "description": "Test booting Nova servers",
    "subtasks": [
        {
            "title": "Boot server and list interfaces",
            "scenario": {
                "NovaServers.boot_server_and_list_interfaces": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "{{image_name}}"
                    }
                }
            },
            "runner": {
                "constant": {
                    "times": 4,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 2
                },
                "network": {
                    "start_cidr": "100.1.0.0/26"
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
