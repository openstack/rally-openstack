{% set flavor_name = flavor_name or "m1.tiny" %}
{% set image_name = "^(cirros.*-disk|TestVM)$" %}
{
    "version": 2,
    "title": "Nova Boot Server And Attach Interface",
    "description": "Test booting Nova servers",
    "subtasks": [
        {
            "title": "Boot server and attach interface",
            "scenario": {
                "NovaServers.boot_server_and_attach_interface": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "{{image_name}}"
                    },
                    "network_create_args": {},
                    "subnet_create_args": {},
                    "subnet_cidr_start": "1.1.0.0/30",
                    "boot_server_args": {}
                }
            },
            "runner": {
                "constant": {
                    "times": 5,
                    "concurrency": 2
                }
            },
            "contexts": {
                "network": {},
                "users": {
                    "tenants": 2,
                    "users_per_tenant": 2
                },
                "quotas": {
                    "neutron": {
                        "network": -1,
                        "subnet": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
