{% set flavor_name = flavor_name or "m1.tiny" %}
{
    "version": 2,
    "title": "Boot and delete Nova servers",
    "description": "Test booting and deleting Nova servers with different network configurations",
    "subtasks": [
        {
            "title": "Boot and delete server without networking",
            "scenario": {
                "NovaServers.boot_and_delete_server": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "^cirros.*-disk$"
                    },
                    "force_delete": false
                }
            },
            "runner": {
                "constant": {
                    "times": 10,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        },
        {
            "title": "Boot and delete server with auto-assigned NIC",
            "scenario": {
                "NovaServers.boot_and_delete_server": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "^cirros.*-disk$"
                    },
                    "auto_assign_nic": true
                }
            },
            "runner": {
                "constant": {
                    "times": 10,
                    "concurrency": 2
                }
            },
            "contexts": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                },
                "network": {
                    "start_cidr": "10.2.0.0/24",
                    "networks_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
