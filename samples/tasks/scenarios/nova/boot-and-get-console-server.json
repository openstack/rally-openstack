{% set flavor_name = flavor_name or "m1.tiny" %}
{% set image_name = image_name or "^cirros.*-disk$" %}
{
    "version": 2,
    "title": "Nova Boot And Get Console Server",
    "description": "Test booting Nova servers",
    "subtasks": [
        {
            "title": "Boot and get console server",
            "scenario": {
                "NovaServers.boot_and_get_console_output": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "{{image_name}}"
                    }
                }
            },
            "runner": {
                "constant": {
                    "times": 1,
                    "concurrency": 1
                }
            },
            "contexts": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
