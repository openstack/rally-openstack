{% set flavor_name = flavor_name or "m1.tiny" %}
{
    "version": 2,
    "title": "Nova List Servers",
    "description": "Test listing Nova resources",
    "subtasks": [
        {
            "title": "List servers",
            "scenario": {
                "NovaServers.list_servers": {
                    "detailed": true
                }
            },
            "runner": {
                "constant": {
                    "times": 1,
                    "concurrency": 1
                }
            },
            "contexts": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                },
                "servers": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "^cirros.*-disk$"
                    },
                    "servers_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
