{% set flavor_name = flavor_name or "m1.tiny" %}
{
    "version": 2,
    "title": "Nova Resize Server",
    "description": "Test server resize operations",
    "subtasks": [
        {
            "title": "Resize server",
            "scenario": {
                "NovaServers.resize_server": {
                    "flavor": {
                        "name": "{{flavor_name}}"
                    },
                    "image": {
                        "name": "^cirros.*-disk$"
                    },
                    "to_flavor": {
                        "name": "m1.small"
                    },
                    "confirm": true,
                    "force_delete": false
                }
            },
            "runner": {
                "constant": {
                    "times": 10,
                    "concurrency": 5
                }
            },
            "contexts": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
